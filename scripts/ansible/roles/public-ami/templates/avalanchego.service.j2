[Unit]
Description=Camino go client
After=syslog.target network.target

[Service]
User=camino
Type=simple
Environment=HOME=/home/camino
ExecStart=/usr/local/bin/caminogo --config-file /etc/caminogo/conf.json
KillMode=process
KillSignal=SIGINT
TimeoutStopSec=90
Restart=on-failure
RestartSec=10s
LimitNOFILE=65000

[Install]
WantedBy=multi-user.target
