+# Go bindings for blst library
+
+load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")
+
+go_library(
+    name = "go",
+    srcs = [
+        "blst.go",
+        "cgo_server.c",
+    ],
+    cgo = True,
+    copts = [
+        "-D__BLST_CGO__",
+        "-I../..",
+        "-I../../bindings",
+        "-I../../src",
+        "-O2",
+        "-D__BLST_PORTABLE__",
+    ] + select({
+        "@io_bazel_rules_go//go/platform:amd64": [
+            "-mno-avx",
+            "-D__ADX__",
+        ],
+        "//conditions:default": [],
+    }),
+    cdeps = ["//:blst"],
+    importpath = "github.com/supranational/blst/bindings/go",
+    visibility = ["//visibility:public"],
+)
+
+go_test(
+    name = "go_test",
+    srcs = [
+        "blst_htoc_test.go",
+        "blst_minpk_test.go",
+        "blst_minsig_test.go",
+    ],
+    embed = [":go"],
+    data = glob(["hash_to_curve/*.json"]),
+)
